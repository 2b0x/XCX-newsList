page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    height: 100%;
}
.fillScrn{
    height: 100%;
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
}
.defalut-box{
    margin:30rpx;
    /* height:200rpx; */
    display:inline-block;
    width:690rpx;
    box-sizing:border-box;
    box-shadow:8px 8px 15px -8px rgba(0, 0, 0, .8);
    background-color:rgba(214, 9, 53, 1);
    border-radius: 10rpx;
    padding: 50rpx 30rpx;
}


.header{
    height: 130rpx;
    background-color: #D60935;
    position: relative;
    display: flex;
    margin-bottom:40rpx;
    padding-top: 20rpx;
}
.bg{
    position: absolute;
    height: 130rpx;
}
.photo{
    height: 128rpx;
    width: 128rpx;
    background-color: #e9e9e9;
    border-radius: 50%;
    flex-basis:128rpx;
    margin: 26rpx 36rpx 0 36rpx;
}
.info{
    flex-grow:1;
    position:relative;
    color: white;
    line-height: 130rpx;
    display: flex;
} 
.userName{
    bottom:-18rpx;
    position: relative;
}
.vip{
    flex-grow: 1;
    text-align: right;
    margin: 14rpx 34rpx 0 0;
}
.vip image{
    width: 50rpx;
    height: 25rpx;
    position: relative;
    bottom: -3rpx;
}
.vip text{
    font-size: 24rpx;
    color: #F4E92A;
    margin: 0 14rpx;
}


.sign-btn{
    background-color: white;
    color: rgba(214, 9, 53, 1);
    width: 35%;
    font-size: 16px;
}
.sign-record{
    display:flex;
    justify-content: space-around;
    /* padding:0 20rpx; */
    margin:60rpx 0 0;
}
.sign-record view{
    text-align: center;
    display: flex;
    flex-direction:column;
    
}
.sign-record text{
    font-size:26rpx;
    color:white;
    margin-top: 10rpx;
}
.sign-record image{
    width: 60rpx;
    height: 68rpx;
    align-items: flex-end;
    align-content: flex-end;
    justify-content: end;
}
.rules{
    text-align:right;
    color:white;
    font-size:24rpx;
    margin:50rpx 0 0;
    position:relative;
    bottom:-30rpx;
}

.sign-success{
    /* 控制签到记录 */
    /* display: block; */
    transition: all .3s;
}

.success-box{
    z-index: 2;
    position: relative;   
    text-align:center;
    display:flex;
    align-content:center;
    align-items:center;
    justify-content:center;
    margin-top:80rpx;

    /* 控制签到板位置 */
    /* top: -100%;  */
    transition: all .8s
}
.success-bg{
    width: 750rpx;
    height: 900rpx;
}
.success-title{
    position: absolute;
    margin-top: -15rpx;
}
.success-day{
    color: rgba(214, 9, 53, 1);
    font-size: 28rpx;
}
.success-num{
    color: #FBC436;
    font-size: 34rpx;
    font-weight: 700;
    margin: 10rpx 0;
}
.success-close{
    position:absolute;
    margin-left:270rpx;
    margin-top:-170px;
}
.success-close image{
    width: 80rpx;
    height: 80rpx;
}
.success-mask{
    background-color:rgba(0,0,0,.3);
    /* 控制蒙层 */
    /* opacity: 0; */
    transition: all .3s;
}

.myPrize{
    color:white;
}
.prize-header{
    display:flex;
    align-items:flex-end;
}
.prize-title{
    font-size:34rpx;
    flex-grow: 1;
}
.prize-more{
    font-size: 24rpx;
}
.prize-list{
    margin: 40rpx 0 0;
}
.lottery{
    color:rgba(214, 9, 53, 1);
    text-decoration:underline;
    font-weight:700;
    margin-top:20rpx;
}