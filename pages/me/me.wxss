page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    height: 100%;
}
.header{
    height: 130rpx;
    background-color: #D60935;
    position: relative;
    display: flex;
}
.bg{
    position: absolute;
    height: 130rpx;
}
.photo{
    height: 128rpx;
    width: 128rpx;
    background-color: #e9e9e9;
    border-radius: 50%;
    flex-basis:128rpx;
    margin: 26rpx 36rpx 0 36rpx;
}
.info{
    flex-grow:1;
    position:relative;
    color: white;
    line-height: 130rpx;
    display: flex;
} 
.userName{
    bottom:-18rpx;
    position: relative;
}
.vip{
    flex-grow: 1;
    text-align: right;
    margin: 14rpx 34rpx 0 0;
}
.vip image{
    width: 50rpx;
    height: 25rpx;
    position: relative;
    bottom: -3rpx;
}
.vip text{
    font-size: 24rpx;
    color: #F4E92A;
    margin: 0 14rpx;
}