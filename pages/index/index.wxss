/**index.wxss**/
topNav{
  display:inline-block;
  width:100%;
  height: 80rpx;
}
::-webkit-scrollbar{
  width: 1rpx;
  height: 5rpx;
  color: #D60935;
}
/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  /* padding-top: 30rpx; */
  box-sizing: border-box;
} 
.item{
  border-bottom:1px solid #dddddd;
  padding:35rpx 25rpx;
}
.itemBox:nth-child(-2) .item{
  border: none;
}
.title{
  font-size: 16px;
  display:inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.imgBox{
  display: flex
}
.imgBox image{
  margin: 0 10rpx;
  flex-basis: 230rpx;
  width: 230rpx;
  height: 180rpx;
  padding: 5rpx 0;
}
.from{
  display: inline-block;
  font-size: 12px;
  color: #a3a3a3;
}
.type02{
  display: flex;
}
.type02 image{
  height:180rpx;
  width:200rpx;
}
.type02 .info{
  flex-grow: 1;
  padding:10rpx 0 15rpx 20rpx;
  position: relative;
  /* position: absolute */
}
.info view:nth-child(2){
  position:absolute;
  bottom:10rpx;
}
.load{
  margin: 20rpx 0;
  display: block
}